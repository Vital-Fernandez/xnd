
SRCDIR = ..

CC = @CC@
LIBSTATIC = @LIBSTATIC@
LIBSHARED = @LIBSHARED@
LIBNDTYPESDIR = @LIBNDTYPESDIR@

CONFIGURE_CFLAGS = @CONFIGURE_CFLAGS@
XND_CFLAGS = $(strip $(CONFIGURE_CFLAGS) $(CFLAGS))


default: runtest runtest_shared


runtest:\
Makefile runtest.c test_fixed.c test.h $(SRCDIR)/xnd.h $(SRCDIR)/$(LIBSTATIC)
	$(CC) -I$(SRCDIR) -I../../$(LIBNDTYPESDIR) $(XND_CFLAGS) -DTEST_ALLOC \
	-o runtest runtest.c test_fixed.c $(SRCDIR)/libxnd.a \
	../../$(LIBNDTYPESDIR)/libndtypes.a

runtest_shared:\
Makefile runtest.c test_fixed.c test.h $(SRCDIR)/xnd.h $(SRCDIR)/$(LIBSHARED)
	$(CC) -I$(SRCDIR) -I../../$(LIBNDTYPESDIR) -L$(SRCDIR) -L../../$(LIBNDTYPESDIR) \
	$(XND_CFLAGS) -DTEST_ALLOC -o runtest_shared runtest.c test_fixed.c \
	-lxnd -lndtypes


FORCE:

clean: FORCE
	rm -f *.o *.gch *.gcda *.gcno *.gcov *.dyn *.dpi *.lock
	rm -f runtest runtest_shared

distclean: FORCE
	$(MAKE) clean
	rm -rf Makefile


